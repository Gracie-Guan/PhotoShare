<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - PicPiq</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">

</head>
<body>
    <header>
      <img src="/img/PicPiq.png" alt="PicPiq website Logo" class="logo">
    </header>

    <main class="registerbox container">
      <a class="btn btn-sm btn-outline-secondary" href="/" id="back-button ">Back</a>

      <% if (messages.error && messages.error.length > 0) { %>
        <div class="alert alert-danger">
          <% messages.error.forEach(function(message) { %>
            <p><%= message %></p>
          <% }) %>
        </div>
      <% } %>

      <% if (messages.success && messages.success.length > 0) { %>
        <div class="alert alert-success">
          <% messages.success.forEach(function(message) { %>
            <p><%= message %></p>
          <% }) %>
        </div>
      <% } %>

      <section class="register mt-3 ">
          <h1 class="mt-4 mb-3">Join PicPiq</h1>

          <%- include('../partials/register.ejs') %>
      </section>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
